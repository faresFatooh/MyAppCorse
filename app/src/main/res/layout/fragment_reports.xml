<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_reports"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_weekly_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekly_hours_placeholder"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_monthly_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monthly_hours_placeholder"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_total_holidays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_holidays_placeholder"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />
</LinearLayout>